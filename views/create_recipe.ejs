<!doctype html>
<html>
<head>
	<meta charset="utf-8"> 
	<title>Create Your Own Recipe</title>
	<link rel="stylesheet" href="/css/style.css" type="text/css">
	<link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Righteous" />
	<link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
	<meta name=‘viewport’ content=“width=device-width, initial-scale=1”>

	<script>
		function alertUser()
		{
			alert("Recipe saved!");
		}

		function navFun() {
  			var x = document.getElementById("myLinks");
 			if (x.style.display === "block") {
    			x.style.display = "none";
    		} else {
    			x.style.display = "block";
 			}
		}
	</script>
	<style type="text/css">
		@media (max-width: 1300px) {
			#name {
				font-size: 4vw;
			}
			#cuisineType 
			{
				font-size: 4vw;
			}
			#ingredients
			{
				font-size: 2vw;
			}
			#instructions
			{
				font-size: 2vw;
			}
		}
	</style>
</head>

<body>
	<nav class="no-mobile">
		<div><a href="/webrecipe" class="middle">Browse</a></div>
		<div><a href="/createrecipe" class="middle" style="color: #4aef21">Add Your Own</a></div>
		<div><a href="/favorites" class="middle">My Favorites</a></div>
		<div><a href="/shoppinglist" class="middle">Shopping List</a></div>
	</nav>

	<div class="mobile-nav">
		<a href="/createrecipe" class="active">Add Your Own</a>
		<div id="myLinks">
			<a href="/webrecipe">Browse</a>
			<a href="/favorites">My Favorites</a>
			<a href="/shoppinglist">Shopping List</a>
		</div>
		<a href="javascript:void(0);" class="icon" onclick="navFun()">
    		<i class="fa fa-bars"></i>
  		</a>
	</div>

	<h1 class="h1_shopping" style="text-align: center; margin-top: 2%; margin-bottom: 2%;">Create Your Own Recipe</h1>

	<form class="createYourOwnForm" method="POST" action="/createrecipe" onsubmit="return alertUser()">
		<input type="hidden" name="apiId" />
		Name of Dish: <br/><br/><input type="text" name="name" id="name" /><br/><br/>
		Dish Type: <br/><br/><input type="text" name="dishType" id="cuisineType" /><br/><br/>
		Cuisine Type: <br/><br/><input type="text" name="cuisineType" id="cuisineType" /><br/><br/>
		<p>Ingredients with quantities (separated by commas): </p>
		<textarea rows="3" cols="50" name="ingredients" id="ingredients">
		</textarea><br/>
		<p>Instructions: </p>
		<textarea rows="6" cols="50" name="instructions" id="instructions"></textarea><br/><br/>
		<input type="hidden" name="source" />
		<input type="hidden" name="image" />
		<input type="hidden" name="userRecipe" value="true" />
		<input type="submit" id="addToFavorites2" value="ADD TO FAVORITES" /><br/><br/>
	</form>
</body>
</html>